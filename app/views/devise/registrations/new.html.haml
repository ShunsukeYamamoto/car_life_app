.form_menu
  %h2.form_title ユーザー登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form_head"}) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name",class: "form form_name",placeholder: "氏名(フルネーム)"
    .field
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",class: "form form_email",placeholder: "Eメールアドレス"
    .field
      %br/
      = f.password_field :password, autocomplete: "new-password",class: "form form_password",placeholder: "パスワード(6文字以上)"
    .field
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password",class: "form form_password_confirmation",placeholder: "パスワード確認"
    .actions
      = f.submit "ユーザー登録",class: "form_btn"
  -# = render "devise/shared/links"

